datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id          Int          @id @default(autoincrement())
  did         String       @unique
  name        String?
  emails      Email[]
  identifiers Identifier[]
  profiles    Profile[]
}

model Email {
  email  String @id
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model Identifier {
  did       String @id
  secretKey String
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
}

model Profile {
  id        String @id
  secretKey String
  value     String
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
}
