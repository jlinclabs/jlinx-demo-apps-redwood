datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  did         String       @unique
  name        String?
  emails      Email[]
  identifiers Identifier[]
  profiles    Profile[]
  contracts   Contract[]
}

model Email {
  email     String   @id
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

model Identifier {
  did       String   @id
  secretKey String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Profile {
  id        String   @id
  secretKey String
  createdAt DateTime @default(now())
  value     String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Contract {
  id        String   @id
  createdAt DateTime @default(now())
  value     String
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}
