datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id         Int        @id @default(autoincrement())
  did        String     @unique
  name       String?
  emails     Email[]
  identities Identity[]
}

model Email {
  email  String @id
  User   User?  @relation(fields: [userId], references: [id])
  userId Int?
}

model Identity {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int
}
